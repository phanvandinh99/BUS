@model WebBus.Models.User

@{
    ViewBag.Title = "Thêm User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm User</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.username, "Tài Khoản")
        @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.password, "Mật Khẩu")
        @Html.PasswordFor(m => m.password, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.role, "Quyền")
        @Html.DropDownListFor(m => m.role,
            new SelectList(new[] { "Admin", "HocSinh" }),
            "Chọn quyền",
            new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
}