@model WebBus.Models.HocSinh

@{
    ViewBag.Title = "Thêm Mới Học Sinh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Học Sinh</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Họ Tên</label>
        @Html.TextBoxFor(m => m.hoTen, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Lớp</label>
        @Html.TextBoxFor(m => m.lop, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tuyển Đường</label>
        @Html.DropDownListFor(m => m.tuyenDuongId, new SelectList(ViewBag.TuyenDuongList, "Id", "TenTuyen"), "Chọn tuyến đường", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tài Khoản</label
        @Html.LabelFor(m => m.userId)
        @Html.TextBoxFor(m => m.userId, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
}