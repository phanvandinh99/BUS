@model List<WebBus.Models.HocSinh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-block">
    <h1 class="title"> Danh Sách Học Sinh </h1>
</div>
<section class="section">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-block">
                    <div class="card-title-block">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-group mb-0">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm Học Sinh..." style="max-width: 300px;">
                            </div>
                            <a href="~/Admin/NguoiDung/Create" class="btn btn-oval btn-primary">Thêm Mới Học Sinh</a>
                        </div>
                    </div>
                    <section class="example">
                        <div class="table-flip-scroll">
                            <table class="table table-striped table-bordered table-hover flip-content" id="khachHangTable">
                                <thead class="flip-header">
                                    <tr>
                                        <th>Tài Khoản</th>
                                        <th>Họ Và Tên</th>
                                        <th>Lớp</th>
                                        <th>Tuyến Đường</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="even gradeC">
                                            <td>@item.userId</td>
                                            <td>@item.hoTen</td>
                                            <td>@item.lop</td>
                                            <td>@item.tuyenDuongId</td>
                                            <td style="text-align:center">
                                                <a href="~/Admin/HocSinh/Delete?id=@item.userId">
                                                    <i class="fa fa-trash"></i>
                                                </a> |
                                                <a href="~/Admin/HocSinh/Edit?id=@item.userId">
                                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a> |
                                                <a href="~/Admin/HocSinh/Details?id=@item.userId">
                                                    <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#khachHangTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>