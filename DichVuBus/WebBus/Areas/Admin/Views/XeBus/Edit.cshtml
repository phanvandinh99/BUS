@model WebBus.Models.XeBus

@{
    ViewBag.Title = "Cập nhật Xe Buýt";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cập nhật Xe Buýt</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.bienSo, "Biển Số")
        @Html.TextBoxFor(m => m.bienSo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.trangThai, "Trạng Thái")
        @Html.DropDownListFor(m => m.trangThai, new SelectList(new[] { "Đang hoạt động", "Bảo trì", "Ngừng hoạt động" }), "Chọn trạng thái", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
}